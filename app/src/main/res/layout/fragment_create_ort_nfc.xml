<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="de.jschmucker.indoorcontroller.model.ort.detections.nfcdetection.CreateOrtNfcFragment">

    <!-- TODO: Update blank fragment layout -->
    <TextView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/create_ort_nfc_fragment_textview"
        android:text="@string/searchingNfcTag" />

    <ProgressBar
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:indeterminate="true"
        android:layout_gravity="center|center_horizontal|center_vertical"
        android:id="@+id/create_ort_nfc_progressbar"/>

    <Button
        android:text="@string/new_search"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal|center_vertical|center"
        android:enabled="false"
        android:visibility="invisible"
        android:id="@+id/create_ort_nfc_refresh_button" />

</FrameLayout>
